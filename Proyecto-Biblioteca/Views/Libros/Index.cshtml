@model IEnumerable<Proyecto_Biblioteca.Models.Libros>
@{
    ViewData["Title"] = "Lista de libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>@TempData["mensaje"]</strong>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Libros</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Libros">Agregar Libro</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0) 
        {
            <table class="table table-bordered table-striped">
                <tr>
                    <td>@Html.DisplayNameFor(m => m.id)</td>
                    <td>@Html.DisplayNameFor(m => m.name)</td>
                    <td>@Html.DisplayNameFor(m => m.autor)</td>
                    <td>@Html.DisplayNameFor(m => m.description)</td>
                    <td>@Html.DisplayNameFor(m => m.linkVideo)</td>
                    <td>@Html.DisplayNameFor(m => m.UrlPdf)</td>
                    <td>Acciones</td>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.autor</td>
                        <td>@item.description</td>
                        <td>@item.linkVideo</td>
                        <td>@item.UrlPdf</td>
                        <td>
                            <a asp-controller="Libros" asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Libros" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>
</div>

